FROM    tensin-base-debian

RUN     apt-get update && apt-get install -y curl ca-certificates tar unzip && apt-clean

# Java Version
# Set environment
ENV     JAVA_HOME /opt/jdk
ENV     PATH ${PATH}:${JAVA_HOME}/bin
ENV     JAVA_PACKAGE       jdk
