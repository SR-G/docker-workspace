# Download and unarchive Java
# https://download.oracle.com/otn-pub/java/jdk/11.0.2+9/f51449fcd52f4d52b93a989c5c56ed3c/jdk-11.0.2_linux-x64_bin.tar.gz?AuthParam=1551997483_885297111b974dc308ba1adf59a617c0
# RUN mkdir -p -m 777 /opt && curl -jkSLH "Cookie: oraclelicense=accept-securebackup-cookie"\
#   https://download.oracle.com/otn-pub/java/${JAVA_PACKAGE}/${JAVA_VERSION}+${JAVA_VERSION_BUILD}/${JAVA_HASH}/${JAVA_PACKAGE}-${JAVA_VERSION}_linux-x64_bin.tar.gz \
#     | tar -xzf - -C /opt &&\
#     ln -s /opt/${JAVA_PACKAGE}-${JAVA_VERSION}/ /opt/jdk &&\
RUN ln -s $(ls -d1 /opt/${JAVA_PACKAGE}* | tail -1) /opt/jdk && \
    rm -rf /opt/jdk/*src.zip \
           /opt/jdk/lib/missioncontrol \
           /opt/jdk/lib/visualvm \
           /opt/jdk/lib/*javafx* \
           /opt/jdk/jre/lib/plugin.jar \
